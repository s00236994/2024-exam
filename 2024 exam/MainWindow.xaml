<Window x:Class="_2024_exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2024_exam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <Label Content="Events" Grid.Row="0" Grid.Column="0" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Tickets" Grid.Row="0" Grid.Column="2" Margin="10"  VerticalAlignment="Center"/>
        <TextBox Name="tbxSearch" Text="Search" Grid.Row="0" Grid.Column="1" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"/>

        <ListBox Name="lbxEvents" Grid.Row="1" Margin="10" Grid.Column="0" Grid.ColumnSpan="2"/>
        <ListBox Name="lbxTickets" Grid.Row="1" Margin="10" Grid.Column="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Margin="10">
                <Label Content="Number of Tickets" Margin="10"/>
                <TextBox Name="tbxNumberOfTickets" Width="100" Margin="10"/>
                <Button Name="btnBook" Height="25" Width="100" Content="Book"/>
            </StackPanel>

    </Grid>
</Window>
